<div class="panel panel-default">
  <div class="panel-heading" role="tab" id="<%= "budgetId#{budget.id}Heading" %>" >
    <h4 class="panel-title">
      <a role="button" data-toggle="collapse" data-parent="#budgets" 
        href="<%= "#budgetCollapse#{budget.id}" %>" aria-expanded="false" 
        aria-controls="<%= "budgetCollapse#{budget.id}" %>" >
        <%= budget.name %>
        <% balance = budget.balance %>
        <%= content_tag :div, class: "#{balance > 0 ? 'text-success' : 'text-danger'} pull-right" do %>
          <%= number_to_currency balance, negative_format: "(%u%n)" %>
        <% end %>
      </a>
    </h4>
  </div>
  <div id="<%= "budgetCollapse#{budget.id}" %>"
       class="panel-collapse collapse" role="tabpanel" 
       aria-labelledby="<%= "budgetId#{budget.id}Heading" %>" >
    <ul class="list-group">
      <%= render budget.transactions %>
    </ul>
  </div>
</div>
