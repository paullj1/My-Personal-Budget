<% flash.each do |message_type, message| %>
  <script>
    (function() {
      var type = '<%= message_type %>'; // success works by default

      if ('<%= message_type %>' === 'alert')
        type = 'warning';
      else if ('<%= message_type %>' === 'error')
        type = 'danger';
      else if ('<%= message_type %>' === 'notice')
        type = 'info';

      $.notify({
        message: '<%= message %>'
      },{
        type: type,
        mouse_over: 'pause',
        offset: {
          y: 60
        }
      });
    }).call(this);
  </script>
<% end %>
